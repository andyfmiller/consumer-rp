    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Assignment.Name" class="control-label"></label>
                <input asp-for="Assignment.Name" class="form-control" />
                <span asp-validation-for="Assignment.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Description" class="control-label"></label>
                <input asp-for="Assignment.Description" class="form-control" />
                <span asp-validation-for="Assignment.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Url" class="control-label"></label>
                <input asp-for="Assignment.Url" class="form-control" />
                <span asp-validation-for="Assignment.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.ConsumerKey" class="control-label"></label>
                <input asp-for="Assignment.ConsumerKey" class="form-control" />
                <span asp-validation-for="Assignment.ConsumerKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.ConsumerSecret" class="control-label"></label>
                <input asp-for="Assignment.ConsumerSecret" class="form-control" />
                <span asp-validation-for="Assignment.ConsumerSecret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.CustomParameters" class="control-label"></label>
                <textarea asp-for="Assignment.CustomParameters" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Assignment.CustomParameters" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
